<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Item Image"
            android:background="@android:color/darker_gray" />

        <!-- Item Name -->
        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Item Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Category -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Category: Personal Belongings"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Date Found -->
        <TextView
            android:id="@+id/tvDateFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Date Found: 10/16/2025 02:08 PM"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Location: Library"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description: Item details here"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Contact -->


        <!-- Anonymous / Student Info Section -->
        <LinearLayout
            android:id="@+id/anonymousSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Student ID (shown only if NOT anonymous) -->
            <TextView
                android:id="@+id/tvStudentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reported by: Student ID 202500123"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <!-- Email Address (shown only if NOT anonymous) -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: student@email.com"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <!-- Anonymous Label (shown only if anonymous) -->
            <TextView
                android:id="@+id/tvAnonymous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submitted Anonymously"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Item Status -->
        <TextView
            android:id="@+id/tvItemStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Status: Pending"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Delete Button (only for rejected items) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_delete_background"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <!-- Reject Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_reject_background"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <!-- Approve Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_approve_background"
                android:textColor="#FFFFFF"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>